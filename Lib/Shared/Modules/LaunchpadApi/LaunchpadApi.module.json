{
    "module": {
        "name": "Launchpad API",
        "icon": "",
        "category": "Web Services",
        "tags": ["Launchpad", "LaunchpadBuilder"],
        "description": "Connect with Launchpad.games to sync game details and share your launchers and themes",
        "author": {
            "name": "Ben McClure, Volantis Dev",
            "url": "https://volantisdev.com"
        },
        "website": "https://launchpad.games",
        "version": "{{VERSION}}",
        "appVersion": "",
        "dependencies": ["WebServices"]
    },
    "parameters": {
        "config.data_source_key": "launchpad_api",
        "config.api_endpoint": "https://api.launchpad.games/v1",
        "config.api_authentication": true
    },
    "services": {
        "data_source.launchpad_api": {
            "class": "ApiDataSource",
            "arguments": ["@{App}", "@manager.cache", "launchpad_api", "@@config.api_endpoint"]
        },
        "cache_state.launchpad_api": {
            "class": "CacheState",
            "arguments": ["@{App}", "@@config.cache_dir", "API.json"]
        },
        "cache.launchpad_api": {
            "class": "FileCache",
            "arguments": ["@{App}", "@cache_state.launchpad_api", "@@config.cache_dir", "API"]
        }
    }
}
